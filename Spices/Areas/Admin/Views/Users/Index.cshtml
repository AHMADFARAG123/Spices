@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start category -->
<div class="whiteBackGround">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Users List</h2>
        </div>

        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/register">
                <!--lecture7   51:25    asp-route="Identity" -->
                <i class="fas fa-plus"></i> &nbsp; New Employee Register
            </a> <!-- lecture7  52:00   ( &nbsp  defination by -> none brake space)    -->




        </div>
    </div>
    @if (Model.Count() == 0)
    {
        <p class="text-danger">No User....</p> <!--lecture7   50:14-->
    }
    else
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Name)   <!--lecture7   48:30-->
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email)   <!--lecture7   48:30-->
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.PhoneNumber)   <!--lecture7   48:30-->

                </th>
                <th>
                    @Html.DisplayNameFor(m => m.LockoutEnabled)   <!--lecture7   from my mind-->
                </th>
                <th>

                </th>

            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>

                @Html.DisplayFor(m => item.Email)
            </td>
            <td>

                @Html.DisplayFor(m => item.PhoneNumber)
            </td>
            <td>

                @Html.DisplayFor(m => item.LockoutEnabled)    <!--lecture7   from my mind-->
            </td>
            <td>

                @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)                   // < !--lecture7  01:21:26-- >
                {
                <a class="btn btn-success" asp-action="LockUNlock" asp-route-id="@item.Id">     <!-- lecture7   01:22:15-->
                                                                                             
                       <i class="fas fa-lock-open"></i>        <!-- lecture7  49:56  +  01:22:26-->
                </a>
                }
                else
                {
                    <a class="btn btn-danger" asp-action="LockUNlock" asp-route-id="@item.Id">     <!-- lecture7   01:22:15-->
                        <i class="fas fa-lock"></i>             <!-- lecture7  49:56  +  01:22:26-->
                    </a>

                }
            </td>
        </tr>
            }

        </table>
    }

