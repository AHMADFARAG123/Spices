@model IEnumerable<MenItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="whiteBackGround">    <!-- lecture4 19:30 -->
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Categories List</h2>
        </div>

        <div class="col-6 text-right">
            <partial name="_CreateButtonPartail" />


        </div>
    </div>
    @if (Model.Count() == 0)
    {
        <p class="text-danger">No Category....</p>
    }
    else
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>

                </th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        @Html.DisplayFor(m => item.Name)
                    </td>

                    <td style="width:150px">
                        <partial name="_OperationsButtonPartial" model="@item.id" />

                    </td>
                </tr>
            }

        </table>
    }









</div>
