@model Coupon
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">Edit Coupon </h2>     <!--lecture5  28minuts-->
<br />

<form asp-action="Edit" methode="post" enctype="multipart/form-data">

    <div class="whiteBackGround border">
        @if (Model.Picture != null)  //  <!--lecture5  28minuts-->

        {
            <img style="width:50%;height:50%;border-radius:5px;" src="@("data:iamge/jpeg;base64,"+ Convert.ToBase64String(Model.Picture))" />
            <br /> <br />

        }
        <input type="hidden" asp-for="iD" />    <!--هامرر الكوبون اى دى فى هيدن   lecture5 35:57-->
        <input type="hidden" asp-for="Picture" /> <!--هامرر الكوبون دوت بيكيتشر  فى هيدن  lecture5 35:57-->

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>        <!--lecture5  minuts-->
        <!--Name of Coupon-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>          <!--lecture2 37 minuts-->
            </div>

        </div>
        <!--Picture-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Picture" type="file" multiple class="form-control" />
            </div>

        </div>
        <!--Coupon Type-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <select class="form-control" asp-for="CouponType" asp-items="@Html.GetEnumSelectList<Coupon.EcouponType>()"></select>   <!--lecture5  15:32 -->
            </div>

        </div>
        <!--Discount-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Discount" class="form-control" />
                <span class="text-danger" asp-validation-for="Discount"></span>          <!--lecture2 37 minuts-->
            </div>

        </div>
        <!--MinimumAmount-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MininmumAmount" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="MininmumAmount" class="form-control" />
                <span class="text-danger" asp-validation-for="MininmumAmount"></span>          <!--lecture2 37 minuts-->
            </div>

        </div>
        <!--IS Active-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="IsActive" type="checkbox" class="form-control" />
                <!--lecture5   00 minuts-->
            </div>

        </div>
        <!--Partial-->
        <div class="form-group row">
            <!--lecture5- 28:57-->
            <div class="col-5 offset-2">

                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-primary form-control " value="Update" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>

@section Scripts{          <!--lecture2 ..minuts-->

    <partial name="_ValidationScriptsPartial" />
}




