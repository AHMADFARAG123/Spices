@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

                                    <!--lecture5 9:55 minuts-->
<div class="whiteBackGround">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Coupons List</h2>
        </div>

        <div class="col-6 text-right">
            <partial name="_CreateButtonPartail"/>


        </div>
    </div>
    @if (Model.Count() == 0)
    {
        <p class="text-danger">No Coupons....</p>
    }
    else
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.MininmumAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.IsActive)
                </th>
                <th>

                </th>

            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>

                @Html.DisplayFor(m => item.Name)
            </td>
            <td>

                @Html.DisplayFor(m => item.Discount)
            </td>
            <td>

                @Html.DisplayFor(m => item.MininmumAmount)
            </td>
            <td>

                @Html.DisplayFor(m => item.IsActive)
            </td>


            <td style="width:150px">
                <partial name="_OperationsButtonPartial" model="@item.iD"/>

            </td>
        </tr>
            }

        </table>
    }



</div>
