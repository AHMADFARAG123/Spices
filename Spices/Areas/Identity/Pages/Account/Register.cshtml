 @page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}




<br />
<h2 class="text-info">Create a New Account</h2>     <!--lecture7  11 minuts-->
<br />

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <div class="whiteBackGround border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>        <!--lecture7  minuts-->


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Name" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Input.Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Name"></span>          <!--lecture7    minuts-->
            </div>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Email" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Input.Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Email"></span>          <!--lecture7    minuts-->
            </div>

        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.PhoneNumber" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.PhoneNumber"></span>          <!--lecture7    minuts-->
            </div>
        </div>




        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.StreetAddress" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Input.StreetAddress" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.StreetAddress"></span>          <!--lecture7    minuts-->
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.City" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Input.City" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.City"></span>          <!--lecture7    minuts-->
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.State" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Input.State" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.State"></span>          <!--lecture7    minuts-->
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.postalCode" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Input.postalCode" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.postalCode"></span>          <!--lecture7    minuts-->
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Password" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Input.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Password"></span>          <!--lecture7    minuts-->
            </div>
        </div>



        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.ConfirmPassword" class="col-form-lable"></label>
            </div>

            <div class="col-5">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>          <!--lecture7    minuts-->
            </div>
        </div>


        @if(User.IsInRole(SD.manageruser))  //Lecture7 01:04:00  اظهار الراديو بوتون لليوزر ادمن(مانيجر)
        { 
        <div class="form-group row">   <!--lecture7    58:41minuts-->  
            <div class="col-2">
               
            </div>

            <div class="col-5 offset-1">   <!--from My Mind I put Offset-1  -->
                <label class="form-check-label" style="padding:5px;">   <!--from My Mind I put style="padding-right:5px;" -->
                   
                <input type="radio" value="@SD.kitchenuser" name="RDuserRole"  checked />@SD.kitchenuser  <!--lecture7   01:01:00+ 59:50minuts-->
               
                </label>


                <label class="form-check-label" style="padding:5px;">         <!--from My Mind I put style="padding-right:5px;" -->  
                    <input type="radio" value="@SD.frontdeskuser" name="RDuserRole"  />@SD.frontdeskuser
                </label>

                <label class="form-check-label" style="padding:5px;">      <!--from My Mind I put style="padding-right:5px;" -->
                    <input type="radio" value="@SD.manageruser" name="RDuserRole" />@SD.manageruser      <!-- he Erase This Class=>>>  class="form-check-input"   lecture7   01:03:00-->
                </label>
            </div>
        </div>
        }


        <div class="form-group row">
            <div class="col-5 offset-4">   <!--offset-2    not  offset-4   -->
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>

    </div>

</form>






